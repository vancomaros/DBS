            <TableColumn fx:id="lbThirdCol" prefWidth="75.0" text="XP" />
            <TableColumn fx:id="lbFourthCol" prefWidth="75.0" text="col1" />
            <TableColumn fx:id="lbFifthCol" prefWidth="75.0" text="col2" />
        </columns>
      </TableView>
      <Button fx:id="lbNext" layoutX="521.0" layoutY="14.0" mnemonicParsing="false" onAction="#incrementOffset" text="Next →" />
